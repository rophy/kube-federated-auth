FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -o /multi-k8s-auth-agent ./cmd/agent

FROM alpine:3.20

RUN apk --no-cache add ca-certificates

COPY --from=builder /multi-k8s-auth-agent /usr/local/bin/multi-k8s-auth-agent

ENTRYPOINT ["multi-k8s-auth-agent"]
